{
	"name": "courseapi-fe",
	"version": "0.0.0",
	"type": "module",
	"packageManager": "pnpm@7.2.0",
	"engines": {
		"node": "^16"
	},
	"license": "GPL-3.0-or-later",
	"scripts": {
		"start": "nx serve",
		"build": "nx build",
		"test": "nx test",
		"lint": "xo"
	},
	"private": true,
	"devDependencies": {
		"@nrwl/cli": "14.2.4",
		"@nrwl/eslint-plugin-nx": "^14.2.4",
		"@nrwl/js": "^14.2.4",
		"@nrwl/nx-cloud": "^14.0.8",
		"@nrwl/react": "^14.2.4",
		"@nrwl/storybook": "14.2.4",
		"@nrwl/web": "14.2.4",
		"@nrwl/workspace": "14.2.4",
		"@storybook/react": "^6.5.8",
		"@svgr/webpack": "^6.2.1",
		"@swc/cli": "^0.1.55",
		"@swc/core": "^1.2.173",
		"@types/lodash-es": "^4.17.6",
		"@types/node": "17.0.42",
		"@types/react": "18.0.12",
		"@types/react-dom": "18.0.5",
		"eslint-config-xo": "^0.41.0",
		"eslint-config-xo-nextjs": "^4.1.0",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.30.0",
		"eslint-plugin-react-hooks": "^4.5.0",
		"eslint-plugin-simple-import-sort": "^7.0.0",
		"nx": "14.2.4",
		"prettier": "^2.6.2",
		"tslib": "^2.4.0",
		"type-fest": "^2.13.0",
		"typescript": "^4.7.2",
		"url-loader": "^4.1.1",
		"vite": "^2.9.12",
		"webpack": "^5.73.0",
		"xo": "^0.50.0"
	},
	"dependencies": {
		"@ladle/react": "^1.0.1",
		"@swc/helpers": "^0.3.17",
		"classnames": "^2.3.1",
		"core-js": "^3.6.5",
		"ladle": "^0.0.0",
		"lodash-es": "^4.17.21",
		"next": "^12.1.6",
		"react": "18.1.0",
		"react-dom": "18.1.0",
		"regenerator-runtime": "0.13.9",
		"tslib": "^2.0.0"
	},
	"xo": {
		"plugins": [
			"simple-import-sort",
			"@nrwl/nx"
		],
		"prettier": true,
		"rules": {
			"simple-import-sort/imports": "error",
			"simple-import-sort/exports": "error",
			"@nrwl/nx/enforce-module-boundaries": "error"
		},
		"overrides": [
			{
				"files": [
					"libs/components/**/*.tsx",
					"libs/icons/**/*.tsx"
				],
				"extends": "xo-react",
				"rules": {
					"@typescript-eslint/consistent-type-imports": "warn",
					"import/no-extraneous-dependencies": "off"
				}
			}
		]
	},
	"prettier": {
		"semi": true,
		"useTabs": true,
		"tabWidth": 2,
		"trailingComma": "all",
		"singleQuote": true,
		"bracketSpacing": true
	}
}
